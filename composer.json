{
    "name": "wildwolf/wp-performance-tweaks",
    "description": "Performance tweaks for WordPress",
    "license": "MIT",
    "type": "wordpress-plugin",
    "keywords": [
        "wordpress",
        "wordpress plugin",
        "wordpress-plugin",
        "performance",
        "tweaks",
        "tuning",
        "performance-tuning",
        "performance-tuning"
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "composer/installers": "^1.0 || ^2.0",
        "wildwolf/singleton-trait": "^1.0"
    },
    "require-dev": {
        "automattic/vipwpcs": "^3.0",
        "johnpbloch/wordpress-core": "^6.0",
        "php-stubs/wordpress-stubs": "^6.0",
        "phpcompatibility/phpcompatibility-wp": "^2.1",
        "vimeo/psalm": "^5.0"
    },
    "scripts": {
        "phpcs": "phpcs",
        "phpcs:fix": "phpcbf",
        "psalm": "psalm --long-progress --no-cache"
    },
    "autoload": {
        "classmap": [
            "inc/"
        ]
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "7.4"
        },
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
